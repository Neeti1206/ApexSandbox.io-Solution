public String nameFromEmail(String email) {
    //code here
     if (email == null || !email.contains('.') || !email.contains('@')) {
        return null;
    }

    String email1 = email.toLowerCase();
    String firstName = email1.substringBefore('.');
    String lastName = email1.substringBetween('.','@');

    String firstName1 = firstName.capitalize();
    String lastName1 = lastName.capitalize();

    return firstName1 + ' ' + lastName1;
   // return firstName.capitalize()+' '+lastName.capitalize();
}